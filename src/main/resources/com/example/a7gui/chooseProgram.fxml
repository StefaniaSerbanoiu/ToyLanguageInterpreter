<StackPane xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.a7gui.chooseProgram">
    <children>
        <VBox alignment="CENTER" prefHeight="502.0" prefWidth="875.0" style="-fx-background-color: #900C3F;">
            <children>
            <Label text="Please select one of the programs below: " textAlignment="CENTER" textFill="LIGHTGRAY">
               <font>
                  <Font name="Rockwell" size="20.0" />
               </font>
            </Label>
                <ListView fx:id="programsListView" prefHeight="391.0" prefWidth="742.0" style="-fx-background-color: #D3D3D3; -fx-background-radius: 5px;">
                    <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </VBox.margin></ListView>
                <Button fx:id="displayButton" alignment="BASELINE_CENTER" maxHeight="-Infinity" minHeight="-Infinity" mnemonicParsing="false" onAction="#displayProgram" prefHeight="26.0" prefWidth="166.0" style="-fx-background-color: #9c9999; -fx-border-color: #6B2737; -fx-border-radius: 15px; -fx-background-radius: 15px;" text="Show me the execution" textAlignment="CENTER" textFill="#6b2737">
                    <font>
                        <Font name="Comic Sans MS" size="12.0" />
                    </font>
                    <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </VBox.margin>
                </Button>
            </children>
        </VBox>
    </children>
</StackPane>
